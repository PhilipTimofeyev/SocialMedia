<%= turbo_frame_tag dom_id(user) do %>
  
  <p> <%= user.email%> </p>

  <% if user_signed_in? %>
    <% if current_user.following_relationships.find_by(follower_id: current_user.id, following_id:user.id, accepted:true)%>
      <%= button_to "Unfollow", follow_user_path(user.id), method: :delete %>
  <% elsif current_user.following_relationships.find_by(follower_id: current_user.id, following_id:user.id, accepted:false)%>
    <%= button_to "Delete Request", follow_user_path(user.id), method: :delete %>
    <% else %>
      <%= button_to "Follow", follow_user_path(user.id), method: :post%>
    <% end %>
  <% end %>
<% end %>