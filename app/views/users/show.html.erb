
<h1> Profile for <%= @user.email%> </h1>

<% if current_user != @user %>
	<%= render partial: "following", locals: {user: @user} %>
<% end %> 


<% if current_user == @user %>
	<% @requests.each do |request| %>
		<ul>
			<li>
			<%= request.follower.email %>
			<%= button_to "Accept Request", follow_path({user_id: request.follower.id}), method: :patch %>
			<%= button_to "Decline Request", follows_path({user_id: request.follower.id}), method: :delete %>
			</li>
		</ul>
	<% end %> 

	<h3> Followers: </h3>

	<% @user.followers.each do |follower| %>
		<ul>
			<li><%= follower.email %> </li>
		</ul>
	<% end %> 

	<h3> Following: </h3>

	<% @user.following.each do |following| %>
		<ul>
			<li><%= following.email %> </li>
		</ul>
	<% end %> 
<% end %> 