<% if current_user == @user %>
	<h1> My Profile</h1>
	<h5> <%= link_to "Edit Profile", edit_user_registration_path(current_user.id) %> </h5>
<% else %>	
	<h1> <%= @user.user_name%>'s Profile </h1>
<% end %>	

<% if current_user != @user %>
	
<% end %> 

<% if current_user == @user %>
	<%= render partial: "requests", locals: {request: @request, user: @user} %>
<% end %> 

<h3> Followers: </h3>

<% @user.followers.each do |follower| %>
	<ul>
		<li><%= link_to "#{follower.user_name}", user_path(follower.id) %> </li>
	</ul>
<% end %> 

<h3> Following: </h3>

<% @user.following.each do |following| %>
	<ul>
		<li><%= link_to "#{following.user_name}", user_path(following.id) %> </li>
	</ul>
<% end %> 