<% @requests.each do |request| %>
<ul>
	<div class="flex flex-row justify-left">
		<%= button_to "#{request.follower.user_name}", user_path(request.follower.id), class:"bg-rose-900 hover:bg-rose-800 text-white font-bold py-1 px-4 text-xs border-blue-700 hover:border-blue-500 rounded no-underline no-underline" %>
		<%= turbo_frame_tag "requests" do %>
		<div class="flex flex-row justify-left">
			<%= button_to "Accept", follow_path({follow: {following: current_user.id, follower: request.follower.id}, id: user.id}), method: :patch, class:"bg-orange-400 hover:bg-orange-300 text-white font-bold text-xs py-1 px-4 rounded ml-4" %>
			<%= button_to "Decline", follow_path({follow: {following: current_user.id, follower: request.follower.id}, id: user.id}), method: :delete, class:"bg-orange-400 hover:bg-orange-300 text-white font-bold text-xs py-1 px-4 rounded" %>
		<% end %>
	</div>
	</div>
</ul>
<% end %> 