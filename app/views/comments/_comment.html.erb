<div class="border-solid border-l-4 border-slate-400 ml-10 bg-slate-100 rounded-md">
  <div class="ml-2">
    <ul class="list-none">
      <%= comment.content %> <br>
      <%= link_to comment.user.user_name, user_path(comment.user.id), class:"bg-rose-900 hover:bg-rose-800 text-white font-bold py-1 px-4 text-xs border-blue-700 hover:border-blue-500 rounded no-underline no-underline"%> <br>

    <% if comment.user == current_user %>
      <%= link_to "Delete", comment_path(comment), class:"bg-blue-500 hover:bg-blue-400 text-white font-bold py-1 px-4 text-xs border-blue-700 hover:border-blue-500 rounded no-underline",
                      data: {
                        turbo_method: :delete
                      } %>
    <% end %>
    </ul>
  </div>
</div>