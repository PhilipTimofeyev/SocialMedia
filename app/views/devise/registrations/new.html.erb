<div class="flex flex-col justify-center items-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <div class= "grid grid-cols-1 gap-6">
    <div class="field">
      <%= f.label "Profile Photo" %><br />
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.text_field :user_name, autofocus: true, placeholder: "Username", autocomplete: "user_name", class:"rounded" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class:"rounded" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class:"rounded" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class:"rounded" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"bg-blue-500 hover:bg-blue-400 text-white font-bold text-sm py-2 px-20 border-b-4 border-blue-700 hover:border-blue-500 rounded mt-4" %>
    </div>
  </div>
  <% end %> <br>

  <%= render "devise/shared/links" %>

</div>
