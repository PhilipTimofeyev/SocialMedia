<div class="flex flex-col justify-center items-center">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email", class:"rounded" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password", class:"rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"bg-blue-500 hover:bg-blue-400 text-white font-bold text-sm py-2 px-20 border-b-4 border-blue-700 hover:border-blue-500 rounded mt-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
