<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.title %>
      <%= post.content %>
    </li>

      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post_path(post), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %>
  <% end %>
</ul>

<%= link_to "New Post", new_post_path %>
