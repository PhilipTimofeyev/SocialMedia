<h1 class="text-center mt-4">New Post</h1>
<div class="flex flex-row min-h-screen justify-center">
  <%= form_with model: post do |form| %>
    <div>
      <h4><%= form.label "Post Title:" %></h4>
      <%= form.text_field :title %>
      <% @post.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="mt-4">
      <h4><%= form.label "Content:" %></h4>
      <%= form.rich_text_area :content %><br>
      <% @post.errors.full_messages_for(:content).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
      <div class="my-4">
          <%=form.label "Add Image", style: "display: block" %>
          <%= form.file_field :image %>
      </div>

      <div class="text-center">
        <%= form.submit "Create Post", class:"bg-blue-500 hover:bg-blue-400 text-white font-bold text-m py-2 px-20 border-b-4 border-blue-700 hover:border-blue-500 rounded" %>
      </div>
  </div>
  <% end %>
</div>
