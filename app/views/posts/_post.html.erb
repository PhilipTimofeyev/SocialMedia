
	<h3> <%= post.title%> </h3>
	<p> <%= post.content%> </p>
			<%=link_to(image_tag(post.image_as_thumbnail), post.image) if post.image.attached? %>
	<ul>
		<li> <%= link_to post.user.user_name, user_path(post.user.id) %>  </li>
	</ul>
	<div>
	<% if post.user == current_user %>
	  <%= link_to "Edit", edit_post_path(post) %>
	  <%= link_to "Delete", post_path(post), data: {
	                    turbo_method: :delete,
	                    turbo_confirm: "Are you sure?"
	                  } %>
	<% end %>
	</div>
		
	<%= turbo_frame_tag dom_id(post) do %>
		<p> <%= pluralize(post.likes.size, 'like') %> </p>

		<% if current_user && post.likes.exists?(user_id: current_user.id) %>
			<%= button_to "Unlike", unlike_post_path(post), method: :delete %>
		<% else %>
			<%= button_to "Like", like_post_path(post) %>
		<% end %>
	<% end %>

  <div>
  	<%= render post.comments %>
  	<%= render partial: "comments/form", locals: {
  	  post: post,
  	  comment: @comment || post.comments.new
  	}%>
  
  </div>